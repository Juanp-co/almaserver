{
  "watch": ["src"],
  "ext": "ts",
  "verbose": true,
  "ignore": [
    "src/**/*.spec.ts",
    "*.test.js",
    "Migrations",
    "dist",
    "public/*",
    "*.json",
    "Docs",
    "*.log"
  ],
  "exec": "ts-node-dev --respawn --transpile-only ./src/index.ts",
  "execMap": {
    "rb": "ruby",
    "pde": "processing --sketch={{pwd}} --run"
  }
}
